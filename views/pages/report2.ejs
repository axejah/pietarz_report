<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="../assets/css/styles.css">
  <title>Pietarz | Keyword Research</title>
</head>

<body>
  <div class="container">
    <h1>Report</h1>
    <div class="report-top-least">
      <div class="chart-container">
        <canvas id="topVolumeChart"></canvas>
      </div>
      <div class="chart-container">
        <canvas id="difficultyChart" style="position: relative; height:40vh; width: 40%"></canvas>
      </div>
    </div>
    <table class="table table-striped" id="reportTable">
      <thead>
        <tr>
          <th scope="col">Keyword</th>
          <th scope="col" onclick="sortTable(0)" style="cursor: pointer;">Rank</th>
          <th scope="col" onclick="sortTable(1)" style="cursor: pointer;">Change</th>
          <th scope="col" onclick="sortTable(2)" style="cursor: pointer;">Difficulty</th>
          <th scope="col" onclick="sortTable(3)" style="cursor: pointer;">Volume</th>
          <th scope="col">URL</th>
        </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>


  <footer class="mt-5">
    <p class="text-center text-muted">&copy; Pietarz Digital Marketing</p>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
  </script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="../assets/js/app.js"></script>
  <script>
    // SORTING INTEGER VALUES IN TABLE BY CLICKING TABLE HEADER

    function sortTable(n) {
      var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
      table = document.getElementById("reportTable");
      switching = true;

      dir = "asc";

      while (switching) {

        switching = false;
        rows = table.rows;

        for (i = 1; i < (rows.length - 1); i++) {
          shouldSwitch = false;
          x = rows[i].getElementsByTagName("TD")[n];
          y = rows[i + 1].getElementsByTagName("TD")[n];
          if (dir == "asc") {
            if (Number(x.innerHTML) > Number(y.innerHTML)) {
              shouldSwitch = true;
              break;
            }
          } else if (dir == "desc") {
            if (Number(x.innerHTML) < Number(y.innerHTML)) {
              shouldSwitch = true;
              break;
            }
          }
        }
        if (shouldSwitch) {
          rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
          switching = true;
          switchcount++;
        } else {
          if (switchcount == 0 && dir == "asc") {
            dir = "desc";
            switching = true;
          }
        }
      }
    }
  </script>
</body>

</html>